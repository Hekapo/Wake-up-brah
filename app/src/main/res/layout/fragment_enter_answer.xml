<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_correct_answers"
            android:layout_width="108dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="161dp"
            android:layout_marginRight="-2dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center_horizontal|top"
            android:text="@string/counter"
            android:textAppearance="@style/counter_style" />

        <View
            android:layout_width="302dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="242dp"
            android:layout_marginRight="37dp"
            android:background="@drawable/question_text" />

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="214dp"
            android:layout_height="145dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="81dp"
            android:layout_marginTop="268dp"
            android:layout_marginRight="81dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="@string/question_text"
            android:autoSizeTextType="uniform"
            android:textAppearance="@style/text_question" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/rectangle_1"
            android:layout_width="335dp"
            android:layout_height="85dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="500dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/enter_answer"
            android:backgroundTint="#B462FF">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_answer"
                inputType="textCapCharacters"
                android:layout_width="300dp"
                android:layout_height="63dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat_bold"
                android:hint="@string/enter_answer"
                android:inputType="text"
                android:textAppearance="@style/text_enter_answer"
                android:textColor="@color/purple_very_dark"
                android:textColorHint="@color/purple_dark" />

        </com.google.android.material.textfield.TextInputLayout>

        <android.widget.Button
            android:id="@+id/btn_enter"
            android:layout_width="335dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="620dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_answer"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/enter_button"
            android:textAppearance="@style/enter_button" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>